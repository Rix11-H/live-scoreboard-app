extends layout

block content
  div.box
    h1 Quidditch Scoreboard
    p Points are added in sets of 10
    div.scoreboard
      form.scoreboard__form 
        select(name="team") Team
          option(value="a") HollyHead Harpies
          option(value="b") Ballycastle Bats
          option(value="c") Monstrose Magpies
          option(value="d") Wimbourne Wasps
          option(value="e") Falmouth Falcons
        div.form__input
          label(for="score") Score: 
          input(name="score", type="text")
        input(type="submit" value="submit")